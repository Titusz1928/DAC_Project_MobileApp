<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.map.MapFragment">

    <!-- ConstraintLayout containing the MapView -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Google MapView -->
        <com.google.android.gms.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- CardView containing ScrollView and content -->
    <androidx.cardview.widget.CardView
        android:id="@+id/addevent_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvEventTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/thin_border"
                    android:paddingTop="10sp"
                    android:paddingBottom="15sp"
                    android:text="Add details"
                    android:textSize="24sp"
                    android:textStyle="bold|italic" />

                <!-- Non-editable field styled as EditText -->
                <EditText
                    android:id="@+id/nonEditableField1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/thin_border"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:inputType="none"
                    android:text="Longitude"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <!-- Non-editable field styled as EditText -->
                <EditText
                    android:id="@+id/nonEditableField2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/thin_border"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:inputType="none"
                    android:text="Latitude"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <!-- Editable title field -->
                <EditText
                    android:id="@+id/editableTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/thin_border"
                    android:hint="Enter title"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <!-- Editable description field -->
                <EditText
                    android:id="@+id/editableDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/thin_border"
                    android:hint="Enter description"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:minHeight="100dp"
                    android:gravity="top"
                    android:inputType="textMultiLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:paddingTop="8dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_save"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/steelblue"
                        android:text="Save"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>



</LinearLayout>
